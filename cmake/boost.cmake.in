cmake_minimum_required(VERSION 2.8.2)

project(boost-download NONE)

include(ExternalProject)
ExternalProject_Add(boost
  URL               "https://sourceforge.net/projects/boost/files/boost/1.64.0/boost_1_64_0.tar.gz"
  SOURCE_DIR        "${CMAKE_BINARY_DIR_ESCAPED}/boost"
  CONFIGURE_COMMAND ./bootstrap.sh
  BUILD_COMMAND     ./b2 ${BOOST_COMPONENTS_FLAGS} ${BOOST_BUILD_TYPE} headers
  BUILD_IN_SOURCE   true
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)
