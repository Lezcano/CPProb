cmake_minimum_required(VERSION 2.8.2)

project(boost-download NONE)

include(ExternalProject)
ExternalProject_Add(boost
  URL               "https://downloads.sourceforge.net/project/boost/boost/1.62.0/boost_1_62_0.zip"
  CONFIGURE_COMMAND ./bootstrap.sh --prefix="${CMAKE_BINARY_DIR}/boost"
  BUILD_COMMAND     ./b2 ${Boost_MAYBE_STATIC} --prefix="${CMAKE_BINARY_DIR}/boost" "${Boost_COMPONENTS_FOR_BUILD}" install
  BUILD_IN_SOURCE   true
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)
